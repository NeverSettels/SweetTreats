@{
  Layout = "_Layout";
}
@using SweetTreats.Models;
@model List<SweetTreats.Models.Author>;

<h1>All Authorsthe distinct flavors in this Bakery</h1>

<ul>

@if (Model.Count == 0)
{
  <h2>No authors have been added yet.</h2>
}
else {
@foreach (Author author in Model)
{
  <li>@Html.ActionLink($"{author.Name}", "Details", new { id = author.AuthorId}) </li>
}
}

</ul>

<p>@Html.ActionLink("Add new Flavor", "Create")</p>
<p>@Html.ActionLink("Return to Home", "Index", "Home")</p>
