@{
  Layout = "_Layout";
}

@model SweetTreats.Models.Client

<h2>Add a flavor</h2>

<h4>Add a flavor to this Client for checkout: @Html.DisplayFor(model => model.ClientName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ClientId)

    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Buy Treat!" class="btn btn-dark"/>
}

<p class="btn btn-dark">@Html.ActionLink("Back to list", "Index")</p>
